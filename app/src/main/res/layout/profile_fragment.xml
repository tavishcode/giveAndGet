<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/profile_photo"
        android:layout_alignParentTop="true"
        android:src="@mipmap/ic_launcher"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"/>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/camButton"
        android:src="@drawable/ic_camera_alt_24dp"
        android:layout_alignRight="@+id/profile_photo"
        android:layout_alignBottom="@id/profile_photo"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp">
    </android.support.design.widget.FloatingActionButton>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editBtn"
        android:layout_below="@+id/profile_photo"
        android:layout_marginRight="24dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_mode_edit_24dp"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/editBtn"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/profile_photo"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:text="Tavish Gobindram"
        android:textSize="18sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_below="@id/name"
        android:layout_height="wrap_content"
        android:id="@+id/points"
        android:text="Volunteer Points: 430"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volunteering Experience"
        android:layout_below="@id/points"
        android:id="@+id/experience"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/experienceList"
        android:layout_below="@id/experience"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp">
    </ListView>
</RelativeLayout>